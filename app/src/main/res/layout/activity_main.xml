<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_gravity="center"
    tools:context=".MainActivity">

    <ImageView
        android:layout_gravity="center"
        android:id="@+id/appImage"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <view
        android:solidColor="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>

    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Taxi App"/>

    <view
        android:solidColor="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>

    <EditText
        android:inputType="number"
        android:id="@+id/et_fare"
        android:layout_gravity="center"
        android:hint="Enter taxi fare"
        android:gravity="center"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <EditText
        android:inputType="number"
        android:id="@+id/et_passengers"
        android:gravity="center"
        android:layout_gravity="center"
        android:hint="Enter passengers"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <EditText
        android:inputType="number"
        android:id="@+id/et_amount_paid"
        android:gravity="center"
        android:layout_gravity="center"
        android:hint="Amount paid"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_change_due"
        android:gravity="center"
        android:layout_gravity="center"
        android:hint="Change due"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

</LinearLayout>